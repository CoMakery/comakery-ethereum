{
  "name": "comakery-ethereum",
  "version": "0.0.0",
  "description": "CoMakery Ethereum contracts and infrastructure",
  "author": "Harlan T Wood (https://github.com/harlantwood)",
  "scripts": {
    "dev:server": "DEBUG=server,token nodemon --watch lib lib/server.coffee",
    "dev": "bin/dev",
    "truffle": "truffle",
    "testrpc": "testrpc -p 7777",
    "fulltest": "npm-run-all test lint",
    "test": "truffle test",
    "lint": "coffeelint --quiet lib test",
    "shipit": "npm run pre-push && git push --tags origin head",
    "pre-push": "npm-run-all check-clean fulltest",
    "check-clean": "if [[ $(git status --porcelain) ]]; then echo '*** Please stash or commit changes first ***\n' && exit 1; fi ",
    "start": "lib/server.coffee",
    "wrap": "npm prune && npm shrinkwrap"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:comakery/comakery-ethereum.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/comakery/comakery-ethereum/issues"
  },
  "homepage": "https://github.com/comakery/comakery-ethereum#readme",
  "dependencies": {
    "body-parser": "^1.14.2",
    "coffee-script": "^1.10.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "lightsaber": "^0.5.1",
    "lodash": "^4.7.0",
    "truffle": "^1.0.0"
  },
  "devDependencies": {
    "coffeelint": "^1.15.0",
    "ethereumjs-testrpc": "^1.2.1",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.7.0"
  },
  "engines": {
    "node": "~5.6.0"
  }
}
