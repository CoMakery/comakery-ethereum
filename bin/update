#!/usr/bin/env node

require('dotenv').config()
const run = require('lightsaber').run

run("which pm2")
run("git status")
run("git add .")
run("git diff HEAD")
run("git fetch")
run("git reset --hard origin/master")
run("git clean -fd")
run("time npm install")
run("npm prune")
run("node_modules/.bin/truffle compile --compile-all --network " + process.env.NODE_ENV)
run("pm2 gracefulReload server")
